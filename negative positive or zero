#include <iostream>
#include <string>

using namespace std;

    int main(){

    int number;
    cout<<"Enter a number"<<endl;
    cin>>number;

    if(number>0){

    cout<<"The number is negative"<<endl;
    }
    else if(number<0){

        cout<<"The number is positive"<<endl;
    }
    else
{


        cout<<"The number is zero"<<endl;
}
    return 0;
}
